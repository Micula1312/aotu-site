---
import Base from '../layouts/Base.astro';

const links = [
  { href: '/archive', label: 'Archive' },
  { href: '/bibliography', label: 'Bibliography' },
  { href: '/taxonomies', label: 'Taxonomies' },
  { href: '/lab/p5-experiments', label: 'P5 Experiments' },
];
---
<Base title="Index Â· AOTU" current="menu">
  <main class="p-6">
    <h1 class="mb-4">Index</h1>
    <div class="grid gap-3 max-w-lg">
      {links.map(l => (
        <a class="btn btn--primary" href={l.href}>{l.label}</a>
      ))}
    </div>
  </main>

  <style>
    .btn{display:block;border:1px dashed var(--term-border);padding:.9rem 1.1rem;
         text-decoration:none; border-radius:8px; font-weight:600}
    .btn--primary:hover{background:var(--term-accent-bg)}
  </style>
</Base>
