---
import Base from '../layouts/Base.astro';
const BASE = import.meta.env.BASE_URL;

const links = [
  { href: `${BASE}`,               label: 'Home' },
  { href: `${BASE}archive`,        label: 'Archive' },
  { href: `${BASE}bibliography`,   label: 'Bibliography' },
  { href: `${BASE}texts`,          label: 'Texts' },
  { href: `${BASE}taxonomies`,     label: 'Taxonomies' },
  { href: `${BASE}lab/p5-experiments`, label: 'P5 Experiments' },
];
---
<Base title="Index Â· AOTU" current="menu">
  <main class="p-6">
    <h1 class="mb-4">Index</h1>
    <div class="grid gap-3 max-w-lg">
      {links.map(l => <a class="btn btn--primary" href={l.href}>{l.label}</a>)}
    </div>
  </main>
  <style>
    .btn{display:block;border:1px dashed var(--term-border);padding:.9rem 1.1rem;text-decoration:none;border-radius:8px;font-weight:600}
    .btn--primary:hover{background:var(--term-accent-bg)}
  </style>
</Base>
