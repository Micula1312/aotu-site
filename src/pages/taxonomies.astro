---
import Base from '../layouts/Base.astro';

// Props della pagina (facoltative)
const { title = 'Taxonomies', current = 'taxonomies' } = Astro.props;

// Se ti serve il base path di GitHub Pages
const BASE = import.meta.env.BASE_URL || '/aotu-site/';
---

<Base title={title} current={current}>
  <section class="p-6">
    <h1 class="text-xl mb-4">Taxonomies</h1>

    <!-- Contenuto placeholder: sostituisci con la tua lista -->
    <ul class="list-disc pl-5 space-y-2">
      <li>People</li>
      <li>Places</li>
      <li>Events</li>
      <li>Media Types</li>
    </ul>
  </section>

  <!-- JS lato client, se ti serve -->
  <!-- Usa Astro.resolve per bundle lato client -->
  <!-- <script type="module" src={Astro.resolve('../scripts/taxonomies.ts')}></script> -->
</Base>
