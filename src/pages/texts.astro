---
import ListPage from "../components/templates/ListPage.astro";
import textsScriptUrl from "../scripts/texts.js?url";
---

<ListPage
  title="ARCHIVE OF THE UNTAMED : BIBLIOGRAPHY"
  subtitle="texts :: [title] [authors] [year] [type/venue]"
  scriptUrl={textsScriptUrl}
>
  <!-- FILTRI (come Network, ma per texts) -->
  <div slot="filters" style="display:grid; grid-template-columns: 1fr 1fr auto auto auto; gap:10px; align-items:center;">
    <input id="q" placeholder="Search title/content…" aria-label="Search text" />
    <input id="author" placeholder="Author (e.g., Haraway)" aria-label="Filter by author" />

    <select id="type" aria-label="Type">
      <option value="">All types</option>
      <!-- riempito via JS -->
    </select>

    <select id="tag" aria-label="Tag">
      <option value="">All tags</option>
      <!-- riempito via JS -->
    </select>

    <div style="display:flex; gap:10px;">
      <select id="sort" aria-label="Sort">
        <option value="year_desc">year ↓</option>
        <option value="year_asc">year ↑</option>
        <option value="title_az">A→Z</option>
        <option value="title_za">Z→A</option>
        <option value="date_new">recent</option>
      </select>
      <button id="refresh" type="button">Refresh</button>
    </div>
  </div>


  <!-- HEADER LISTA (4 colonne, come Network) -->
  <div slot="list-header" class="network-header">
    <div>Title</div>
    <div>Authors</div>
    <div>Year</div>
    <div>Type / Venue</div>
  </div>
</ListPage>
