---
import Sidebar from '../components/Sidebar.astro'; // IMPORTANT
const BASE = import.meta.env.BASE_URL || '/';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href={`${BASE}css/terminal.css`} />
    <title><slot name="head-title" /></title>
  </head>
  <body>
    <main class="layout container">
      <Sidebar />
      <section class="content">
        <slot />
        <audio id="bg-audio" preload="auto" playsinline loop muted>
          <source src={`${BASE}assets/audio/soundscape.mp3`} type="audio/mp3" />
        </audio>
      </section>
    </main>

    <!-- Scripts from /public need is:inline + BASE -->
    <script src={`${BASE}js/core.js`} is:inline></script>
  </body>
</html>
