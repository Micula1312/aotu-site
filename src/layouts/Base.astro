---
import Sidebar from "../components/Sidebar.astro";
import "../styles/terminal.css";                    // ✅ styles sta a src/styles
import soundFile from "../assets/audio/soundscape.mp3"; // ✅ asset bundlato
import coreScriptUrl from "../scripts/core.js?url";     // ✅ script bundlato
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><slot name="head-title" /></title>
  </head>
  <body>
    <main class="layout container">
      <Sidebar />
      <section class="content">
        <slot />
        <audio id="bg-audio" preload="auto" playsinline loop muted>
          <source src={soundFile} type="audio/mpeg" />
        </audio>
      </section>
    </main>

    <script type="module" src={coreScriptUrl}></script>
  </body>
</html>
