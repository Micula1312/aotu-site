
---
import '../styles/visuals-fx.css';

const coreScriptUrl = '/src/scripts/visuals/fx-ui.ts';
---
<div id="fx-fab" aria-label="Open FX panel">FX</div>
<div id="fx-panel" class="closed" role="dialog" aria-modal="false">
  <header>Visual FX</header>
  <section>
    <label class="row"><input type="checkbox" id="fxPixelateChk" /><span>Pixelate</span></label>
    <div class="row"><input type="range" id="fxPixelate" min="1" max="12" step="1" value="4" /><output id="fxPixelateOut">4Ã—</output></div>
  </section>
  <section>
    <label class="row"><span>Blur</span><input type="range" id="fxBlur" min="0" max="20" step="1" value="0" /><output id="fxBlurOut">0px</output></label>
  </section>
  <section>
    <label class="row"><input type="checkbox" id="fxDuoChk" /><span>Duotone</span></label>
    <div class="row">
      <label class="chip">A <input type="color" id="fxDuoA" value="#00ffc8" /></label>
      <label class="chip">B <input type="color" id="fxDuoB" value="#6b00ff" /></label>
      <label class="chip">Opacity <input type="range" id="fxDuoO" min="0" max="1" step="0.05" value="0.5" /></label>
    </div>
  </section>
  <footer><button id="fxClose" type="button">Close</button><button id="fxReset" type="button">Reset</button></footer>
</div>
<div id="fx-duo-overlay" style="display:none"></div>

<!-- ...markup del pannello FX... -->
<script type="module" src={coreScriptUrl}></script>
