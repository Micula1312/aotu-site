---
import Base from "../../layouts/Base.astro";
const { title, subtitle, scriptUrl } = Astro.props;
import "../../styles/archive.css";
import "../../styles/network.css";
---
<Base>
  <Fragment slot="head-title">{title}</Fragment>

  <header>
    <h1>{title}</h1>
    {subtitle && <p class="sub">{subtitle}</p>}
  </header>

  <section class="bar" aria-label="Filters">
    <slot name="filters" />
  </section>

  <div id="state" class="loading">Loadingâ€¦</div>

  <slot name="list-header" />
  <div id="networkList" class="network-list" hidden></div>

  <dialog id="node">
    <button class="close" onclick="document.getElementById('node').close()">Close</button>
    <div class="lb-wrap">
      <div class="lb-media" id="nodeMedia"></div>
      <div class="lb-meta">
        <h3 id="nodeTitle"></h3>
        <div class="muted" id="nodeInfo"></div>
        <div id="nodeTerms" style="margin-top:6px"></div>
        <div id="nodeBody" style="margin-top:10px"></div>
        <div id="nodeLinks" style="margin-top:10px; display:flex; gap:10px; flex-wrap:wrap;"></div>
      </div>
    </div>
  </dialog>

  {scriptUrl && <script type="module" src={scriptUrl}></script>}
</Base>
